@inherits umbraco.MacroEngines.DynamicNodeContext
<div class="col-sm-7">
    <div class="avatar">
        @{
            try
            {
            <img src="@Model.profileImage.mediaItem[0].Image.umbracoFile" height="100" width="90" />
            }
            catch (Exception)
            {
                //Show default image
            <img src="/img/defaultImage.jpg" alt="" height="100" width="90" />
            }
        }
    </div>
    <div class="txt">
        <h2>@CurrentModel.GetProperty("Name")</h2>
    </div>
    <div class="interview">
        <p>@CurrentModel.GetProperty("description")</p>
    </div>
</div>
